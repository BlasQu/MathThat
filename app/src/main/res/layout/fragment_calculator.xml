<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CalculatorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:background="@drawable/gradientbackground"
        android:id="@+id/rellayout">

        <TextView
            android:id="@+id/calcResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:fontFamily="sans-serif-medium"
            android:text="0"/>

        <TextView
            android:id="@+id/calcHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calcResult"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:fontFamily="sans-serif-thin"
            android:text="0"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rellayout">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calcClear"
            android:layout_height="77dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="40dp"
            android:background="@drawable/buttoncalc"
            android:drawableTint="@color/white"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calcClearOne"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:text="C"
            android:textSize="40dp"
            android:background="@drawable/buttoncalc"
            android:drawableTint="@color/white"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calcplusminus"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:text="%"
            android:textSize="40dp"
            android:background="@drawable/buttoncalc"
            android:drawableTint="@color/white"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calcdivide"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:text="รท"
            android:textSize="40dp"
            android:background="@drawable/buttoncalc"
            android:drawableTint="@color/white"
            android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_below="@id/ll1"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc7"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc8"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:text="8"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc9"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:text="9"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calcmultiply"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:text="x"
                android:textAllCaps="false"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_below="@id/ll2"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc4"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc5"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:text="5"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc6"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calcminus"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:text="-"
                android:textAllCaps="false"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_below="@id/ll3"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc1"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:text="2"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc3"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calcplus"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:text="+"
                android:textAllCaps="false"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

        </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calc0"
                android:layout_width="206dp"
                android:layout_height="77dp"
                android:layout_below="@id/ll4"
                android:text="0"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calcdot"
                android:layout_width="103dp"
                android:layout_height="77dp"
                android:layout_below="@id/ll4"
                android:layout_toRightOf="@id/calc0"
                android:layout_weight="1"
                android:text="."
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calceequal"
                android:layout_width="103dp"
                android:layout_height="77dp"
                android:layout_toRightOf="@id/calcdot"
                android:layout_below="@id/ll4"
                android:layout_weight="1"
                android:text="="
                android:textAllCaps="false"
                android:textSize="40dp"
                android:background="@drawable/buttoncalc"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

    </RelativeLayout>

    </RelativeLayout>

</FrameLayout>